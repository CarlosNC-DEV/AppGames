<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.stropper.StropperActivity"
    android:orientation="vertical"
    android:gravity="center">


    <TextView
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="30dp"
        android:id="@+id/txtTiempo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="30 \n segundos" />

    <TextView
        android:textSize="20dp"
        android:layout_marginHorizontal="15dp"
        android:textStyle="bold"
        android:id="@+id/txtPuntos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3 Puntos" />

    <androidx.cardview.widget.CardView
        android:layout_margin="15dp"
        android:backgroundTint="#DDDDDD"
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:textStyle="bold"
                android:id="@+id/txtColorAndText"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Amarillo"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_marginHorizontal="5dp"
            android:id="@+id/btnFalso"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Falso" />

        <Button
            android:layout_marginHorizontal="5dp"
            android:id="@+id/btnVerdadero"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verdadero" />


    </LinearLayout>

</LinearLayout>