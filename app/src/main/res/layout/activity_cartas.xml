<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.cartas.CartasActivity"
    android:orientation="vertical"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTiempo"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="30 \n Segundos" />

            <TextView
                android:layout_marginVertical="10dp"
                android:id="@+id/txtPuntos"
                android:textSize="20dp"
                android:layout_marginHorizontal="15dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="3 Puntos" />

            <LinearLayout
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtPoderOne"
                            android:textSize="18dp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Poder: 34 Hp"/>

                        <ImageView
                            android:id="@+id/imgOne"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            tools:src="@color/black"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtPoderTwo"
                            android:textSize="18dp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Poder: 34 Hp"/>

                        <ImageView
                            android:id="@+id/imgTwo"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            tools:src="@color/colorPrimary"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:textAlignment="center"
                android:layout_marginVertical="10dp"
                android:textSize="20dp"
                android:layout_marginHorizontal="15dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â¿Las Cartas Son Iguales?" />

            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/btnFalso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Falso" />

                <Button
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/btnVerdadero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Verdadero" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>