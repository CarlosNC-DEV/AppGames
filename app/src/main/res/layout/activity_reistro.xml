<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.login.regitro.ReistroActivity"
    android:orientation="vertical"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_marginVertical="50dp"
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/logo" />

            <com.google.android.material.textfield.TextInputLayout
                app:startIconDrawable="@drawable/person_icon"
                app:endIconMode="clear_text"
                android:layout_margin="10dp"
                android:id="@+id/tylNombre"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:inputType="text"
                    android:id="@+id/edtNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingresa tus nombres" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                app:startIconDrawable="@drawable/apellidos_icon"
                app:endIconMode="clear_text"
                android:layout_margin="10dp"
                android:id="@+id/tlyApellidos"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:inputType="text"
                    android:id="@+id/edtApellidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingresa tus apellidos" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                app:startIconDrawable="@drawable/mail_icon"
                app:endIconMode="clear_text"
                android:layout_margin="10dp"
                android:id="@+id/tlyCorreo"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:inputType="textEmailAddress"
                    android:id="@+id/edtCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingresa tu correo" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                app:startIconDrawable="@drawable/key_icon"
                app:endIconMode="password_toggle"
                android:layout_margin="10dp"
                android:id="@+id/tlyPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:inputType="textPassword"
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Imgresa una contraseÃ±a" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:layout_margin="10dp"
                android:id="@+id/btnregistrarUsuarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrarme" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>